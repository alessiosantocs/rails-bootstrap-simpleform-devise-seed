<!DOCTYPE html>
<html>
<head>
  <title>RailsBootstrapSimpleformDeviseSeed</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a href="<%= root_url %>" class="navbar-brand">
        <%= application_brand %>
      </a>
    </div>

    <p class="navbar-text navbar-right">
      <% if current_user.present? %>
        Logged in as <%= current_user.email %> <%= link_to "Logout", destroy_user_session_url, method: :delete %>
      <% else %>
        <%= link_to "Sign in", new_user_session_url %>
      <% end %>
    </p>
  </div>
</div>

<div class="container">
  <% if notice.present? %>
    <div class="alert alert-info"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <%= yield %>

</div>

</body>
</html>
